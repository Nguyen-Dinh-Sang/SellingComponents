


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V10</title>
    <link rel="stylesheet" href="~/css/Login_css.css" />
    <script type="text/javascript" src="~/js/Employee_js/Employee.js"></script>
    <script type="text/javascript" src="~/js/jQuery/jQuery.js"></script>
</head>
<body>
    <form method="post" name="login_form">

        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="user" class="label">Username</label>
                            <input id="login_username" type="text" name="login_username" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="login_password" name="login_password" type="password" class="input" data-type="password">
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Keep me Signed in</label>
                        </div>
                        <div class="group">
                            <input type="button" onclick="login()" class="button" value="Sign In" name="login_submit">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="#forgot">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="user" class="label">FullName</label>
                            <input id="registration_fullname" type="text" class="input" name="registration_fullname">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="registration_password" type="password" class="input" data-type="password" name="registration_password">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Repeat Password</label>
                            <input id="registration_passwordRepeat" type="password" class="input" data-type="password" name="registration_passwordRepeat">
                        </div>
                        <div class="group">
                            <label for="email" class="label">UserName</label>
                            <input id="registration_UserName" name="registration_UserName" type="text" class="input">
                        </div>
                        <div class="group">
                            <input type="button" onclick="sigup()" name="registration_submit" id="registration_submit" class="button" value="Sign Up">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label for="tab-1">Already Member?</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </form>
</body>
</html>
